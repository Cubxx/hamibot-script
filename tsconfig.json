{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "noImplicitAny": false,
    "verbatimModuleSyntax": true,
    "paths": {
      "~/*": ["./src/shared/*"]
    }
  },
  "include": ["node_modules/hamibot-types/types", "src", "types"]
}
