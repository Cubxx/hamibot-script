{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "noImplicitAny": false,
    "verbatimModuleSyntax": true,
    "paths": {
      "~/*": ["./src/shared/*"]
    },
    "types": ["hamibot-types"]
  },
  "include": ["src", "types"]
}
